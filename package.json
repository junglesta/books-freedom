{
  "name": "books-freedom-workspace",
  "version": "0.5.3",
  "private": true,
  "type": "module",
  "scripts": {
    "certs:generate": "node scripts/generate-dev-certs.mjs",
    "data:sync": "node scripts/sync-library-data.mjs",
    "data:sync:dummy": "LIBRARY_SOURCE_FILE=data/library.dummy.json node scripts/sync-library-data.mjs",
    "data:apply": "node scripts/apply-library-data.mjs",
    "dev": "pnpm dev:webapp",
    "dev:webapp": "pnpm data:sync && pnpm --filter @books-freedom/webapp dev",
    "dev:webapp:https": "pnpm data:sync && pnpm --filter @books-freedom/webapp dev:https",
    "dev:astro": "pnpm data:sync && pnpm --filter @books-freedom/astro-site dev",
    "build": "pnpm build:webapp",
    "build:webapp": "pnpm data:sync && pnpm --filter @books-freedom/webapp build",
    "build:astro": "pnpm data:sync && pnpm --filter @books-freedom/astro-site build",
    "test": "pnpm --filter @books-freedom/webapp test",
    "lint": "pnpm -r lint",
    "format": "pnpm --filter @books-freedom/webapp format",
    "preflight": "pnpm --filter @books-freedom/webapp preflight"
  }
}
